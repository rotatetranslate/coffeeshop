<h1>Edit that bean!</h1>

<%= form_for @bean do |f| %>

  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :roast %>
    <%= f.text_field :roast %>
  </div>

  <div>
    <%= f.label :origin %>
    <%= f.text_field :origin %>
  </div>

  <div>
    <%= f.label :quantity %>
    <%= f.text_field :quantity %>
  </div>

  <%= f.submit "Submit your bean changes!" %>
<br>
  <%= link_to "Delete that bean!", bean_path, method: :delete,
 data: { confirm: "Are u really really gonna delete dat bean?" } %>

<% end %>

<%= link_to "Back to the list!", beans_path %>
